// File: manifest.json
{
  "manifest_version": 3,
  "name": "Cookie Security Checker",
  "version": "1.0",
  "description": "Checks cookie security on every website you visit.",
  "permissions": [ "cookies", "activeTab" ],
  "host_permissions": [ "<all_urls>" ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}